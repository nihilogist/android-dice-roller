<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dave3heaton.rpgdiceroller">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".RpgDiceRollerMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SeventhSeaRollerMainActivity"
            android:label="@string/title_activity_seventh_sea_roller_main"
            android:parentActivityName=".RpgDiceRollerMain"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.dave3heaton.rpgdiceroller.RpgDiceRollerMain" />
        </activity>
    </application>

</manifest>
