<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/seventh_sea_roll_result_card_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <org.dave3heaton.rpgdiceroller.utils.typography.JosefinTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/seventh_sea_result_card_roll_detail_text"
            android:text=""
            android:id="@+id/seventh_sea_rollcard_roll_dice"
            android:layout_alignParentLeft="true"/>
        <org.dave3heaton.rpgdiceroller.utils.typography.JosefinTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/seventh_sea_result_card_roll_detail_text"
            android:text="k"
            android:id="@+id/seventh_sea_rollcard_keep_indicator"
            android:layout_toRightOf="@+id/seventh_sea_rollcard_roll_dice"/>
        <org.dave3heaton.rpgdiceroller.utils.typography.JosefinTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/seventh_sea_result_card_roll_detail_text"
            android:text=""
            android:id="@+id/seventh_sea_rollcard_keep_dice"
            android:layout_toRightOf="@+id/seventh_sea_rollcard_keep_indicator"/>
        <org.dave3heaton.rpgdiceroller.utils.typography.JosefinTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/seventh_sea_result_card_roll_detail_text"
            android:text=":"
            android:id="@+id/seventh_sea_rollcard_roll_end"
            android:layout_toRightOf="@+id/seventh_sea_rollcard_keep_dice"/>
        <org.dave3heaton.rpgdiceroller.utils.typography.JosefinTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/seventh_sea_result_card_roll_detail_text"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text=""
            android:id="@+id/seventh_sea_rollcard_roll_score"
            android:layout_toRightOf="@+id/seventh_sea_rollcard_roll_end"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/seventh_sea_rollcard_roll_score"
            android:layout_toLeftOf="@+id/seventh_sea_rollcard_roll_button"
            android:id="@+id/seventh_sea_rollcard_dicelist">
        </LinearLayout>
        <org.dave3heaton.rpgdiceroller.utils.typography.JosefinTypefaceButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seventh_sea_rollcard_roll_button"
            android:layout_alignParentEnd="true"
            android:text="@string/seventh_sea_roll_card_reroll"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>