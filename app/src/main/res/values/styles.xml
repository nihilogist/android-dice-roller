<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_header_style">
        <item name="android:textColor">@color/materialThemeTextColour</item>
        <item name="android:textSize">@dimen/text_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">@dimen/text_header_space_below</item>
    </style>

    <style name="seventhSeaDieSelectButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/materialThemeTextColour</item>
        <item name="android:textSize">@dimen/seventh_sea_roller_dice_select_button_font_size</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/flat_radio_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/seventh_sea_roller_dice_select_button_height
        </item>
        <item name="android:layout_margin">@dimen/custom_radio_button_external_margin</item>
        <item name="android:stateListAnimator">@anim/custom_radio_button_animation</item>
    </style>

    <style name="seventh_sea_layout_column_style">
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">@dimen/seventh_sea_dice_select_column_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="seventh_sea_layout_results_column_style">
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>


    <style name="seventh_sea_die_selector_scrollview">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="seventh_sea_die_selector_radiogroup">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="seventh_sea_die_selector_textsize">
        <item name="android:textSize">@dimen/seventh_sea_die_button_text_size</item>
    </style>

    <style name="seventh_sea_result_summary_pane">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:layout_width">75dp</item>
    </style>

    <style name="seventh_sea_result_card_switch">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="seventh_sea_result_card_roll_detail_text">
        <item name="android:textSize">@dimen/seventh_sea_result_card_roll_detail_text_size</item>
    </style>

    <style name="seventh_sea_result_card_roll_score_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/seventh_sea_result_card_roll_score_text_size</item>
    </style>


</resources>
